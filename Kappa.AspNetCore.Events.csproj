<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Version>6.0.0</Version>
    <Authors>Nurgaleyev, German</Authors>
    <Company>KappaSoft</Company>
    <Description>Simple events for AspNetCore</Description>
    <Copyright>KappaSoft</Copyright>
    <PackageIcon>LogoBlue.png</PackageIcon>
    <RepositoryUrl>https://github.com/n-gm/Kappa.AspNetCore.Events</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>aspnetcore events</PackageTags>
    <Title>KappaEvents</Title>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\KappaQueue\KappaQueue\wwwroot\resources\LogoBlue.png">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="6.0.1" />
    <PackageReference Include="System.Reflection.Emit" Version="4.7.0" />
  </ItemGroup>

</Project>
